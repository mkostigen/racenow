#new-race-modal.modal{ role: "dialog", "aria-labelledby": "emptyModalLabel", "aria-hidden": "true" }
  .modal-dialog.modal-lg
      .modal-content
        .model-body
          .row.align-items-center.justify-content-center
            .col-5
              %h1.display-4.text-center.mb-3.pt-5
                Create a new Race
              %p.text-muted.text-center.mb-5
                in seconds
              = form_for(@race) do |f|
                .form-group
                  = f.label :name
                  = f.text_field :name, autofocus: true
                .form-group
                  = f.label :date
                  = f.date_field :date
                .form-group
                  = f.label :city
                  = f.text_field :city
                .form-group
                  = f.label :state
                  = f.text_field :state
                .actions.pb-5
                  = f.submit "Start Organizing", class: "button btn btn-secondary"
                  %button.btn.btn-primary{ "data-dismiss": "modal" } close